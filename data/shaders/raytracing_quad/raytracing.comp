int intersect(in vec3 rayO, in vec3 rayD, inout float resT) {
  int id = -1;

#ifdef USE_QUADS
  for (int i = 0; i < quads.length(); i++) {
    float tSphere = quadIntersect(rayO, rayD, quads[i]);
    if ((tSphere > EPSILON) && (tSphere < resT)) {
      id = quads[i].id;
      resT = tSphere;
    }
  }
#endif

#ifdef USE_SPHERES
  for (int i = 0; i < spheres.length(); i++) {
    float tSphere = sphereIntersect(rayO, rayD, spheres[i]);
    if ((tSphere > EPSILON) && (tSphere < resT)) {
      id = spheres[i].id;
      resT = tSphere;
    }
  }
#endif

#ifdef USE_PLANES
  for (int i = 0; i < planes.length(); i++) {
    float tplane = planeIntersect(rayO, rayD, planes[i]);
    if ((tplane > EPSILON) && (tplane < resT)) {
      id = planes[i].id;
      resT = tplane;
    }
  }
#endif

  return id;
}

#ifdef USE_SHADOW
float calcShadow(in vec3 rayO, in vec3 rayD, in int objectId, inout float t) {
  for (int i = 0; i < spheres.length(); i++) {
    if (spheres[i].id == objectId)
      continue;
    float tSphere = sphereIntersect(rayO, rayD, spheres[i]);
    if ((tSphere > EPSILON) && (tSphere < t)) {
      t = tSphere;
      return SHADOW;
    }
  }
  return 1.0;
}
#endif

#ifdef USE_FOG
vec3 fog(in float t, in vec3 color) {
  return mix(color, ubo.fogColor.rgb, clamp(sqrt(t * t) / 20.0, 0.0, 1.0));
}
#endif

vec3 renderScene(inout vec3 rayO, inout vec3 rayD, inout int id) {
  vec3 color = vec3(0.0);
  float t = MAXLEN;

  // Get intersected object ID
  int objectID = intersect(rayO, rayD, t);
  // if (quads.length() >=1)
  // return vec3(1.0,0.0,0.0);
  // return vec3(1.0,0.0,1.0);
  if (objectID == -1) {
    return color;
  }

  vec3 pos = rayO + t * rayD;
  vec3 lightVec = normalize(ubo.lightPos - pos);
  vec3 normal;

  // Spheres
#ifdef USE_QUADS
  for (int i = 0; i < quads.length(); i++) {
    if (objectID == quads[i].id) {
      normal = quads[i].normal;
      float diffuse = lightDiffuse(normal, lightVec);
      float specular = lightSpecular(normal, lightVec, quads[i].specular);
      color = diffuse * quads[i].diffuse + specular;

      if (t == 0.0) {
        // color = vec3(0.0, 0.0, 1.0);//tt
        return color;
      }
      if (t == 1.0) {
        color = vec3(1.0, 0.0, 0.0);  // tt
        return color;
      }
    }
  }
#endif

// Spheres
#ifdef USE_PLANES
  for (int i = 0; i < planes.length(); i++) {
    if (objectID == planes[i].id) {
      normal = planes[i].normal;
      float diffuse = lightDiffuse(normal, lightVec);
      float specular = lightSpecular(normal, lightVec, planes[i].specular);
      color = diffuse * planes[i].diffuse + specular;
    }
  }
#endif

#ifdef USE_SPHERES
  // Planes
  for (int i = 0; i < spheres.length(); i++) {
    if (objectID == spheres[i].id) {
      normal = sphereNormal(pos, spheres[i]);
      float diffuse = lightDiffuse(normal, lightVec);
      float specular = lightSpecular(normal, lightVec, spheres[i].specular);
      color = diffuse * spheres[i].diffuse + specular;
    }
  }
#endif
  if (id == -1)
    return color;

  id = objectID;
  t = length(ubo.lightPos - pos);

#ifdef USE_SHADOW
  // Shadows
  color *= calcShadow(pos, lightVec, id, t);
#endif
#ifdef USE_FOG
  // Fog
  color = fog(t, color);
#endif

#ifdef USE_REFLECT
  // Reflect ray for next render pass
  reflectRay(rayD, normal);
#endif
  rayO = pos;

  return color;
}

void main() {
  ivec2 dim = imageSize(resultImage);
  vec2 uv = vec2(gl_GlobalInvocationID.xy) / dim;

  vec3 rayO = ubo.camera.pos;
  vec3 rayD = normalize(
      vec3((-1.0 + 2.0 * uv) * vec2(ubo.aspectRatio, 1.0), -sqrt(15)));

  // Basic color path
  int id = 0;
  vec3 finalColor = renderScene(rayO, rayD, id);

  // Reflection
  if (REFLECTIONS) {
    float reflectionStrength = REFLECTIONSTRENGTH;
    for (int i = 0; i < RAYBOUNCES; i++) {
      vec3 reflectionColor = renderScene(rayO, rayD, id);
      finalColor = (1.0 - reflectionStrength) * finalColor +
                   reflectionStrength * mix(reflectionColor, finalColor,
                                            1.0 - reflectionStrength);
      reflectionStrength *= REFLECTIONFALLOFF;
    }
  }

  imageStore(resultImage, ivec2(gl_GlobalInvocationID.xy),
             vec4(finalColor, 0.0));
}
