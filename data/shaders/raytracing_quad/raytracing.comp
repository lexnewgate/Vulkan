  vec3 pos;
  float radius;
  vec3 diffuse;
  float specular;
  int id;
};

struct Plane {
  vec3 normal;
  float distance;
  vec3 diffuse;
  float specular;
  int id;
};

struct Quad {
  vec3 pos;
  float radius;
  vec3 diffuse;
  float specular;
  int id;
  vec3 normal;
  vec3 v0;
  vec3 v1;
  vec3 v2;
  vec3 v3;
